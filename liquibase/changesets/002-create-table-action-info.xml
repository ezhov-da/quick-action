<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet author="ezhovda" id="002-create-table-action-info">
        <createTable tableName="ACTION_INFO" schemaName="PUBLIC">
            <column name="ID" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="KEY" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="VALUE" type="CHARACTER LARGE OBJECT"/>
        </createTable>

        <rollback>
            <dropTable tableName="ACTION_INFO" schemaName="PUBLIC"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
